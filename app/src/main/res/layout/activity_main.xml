<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70BAF4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="73dp"
        android:fontFamily="@font/aldrich"
        android:text="Sign up"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="63dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="411dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Fullname"
        android:inputType="text"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="152dp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="411dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="258dp" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="411dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="211dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="455dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or sign up with"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="536dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a member? Sign in"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="666dp" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="411dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="317dp" />

    <EditText
        android:id="@+id/editTextTextPassword3"
        android:layout_width="405dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Re-type password"
        android:inputType="textPassword"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="385dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="68dp"
        android:layout_height="64dp"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/icons8_instagram"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="570dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/icons8_facebook"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="570dp" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/icons8_twitterx"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="570dp" />

</androidx.constraintlayout.widget.ConstraintLayout>