        android:layout_marginBottom="67dp"
        app:layout_constraintBottom_toTopOf="@+id/SubmBtn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text10">

        <RadioButton
            android:id="@+id/radioBtn11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brunelleschi" />

        <RadioButton
            android:id="@+id/radioBtn12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buonarroti" />

        <RadioButton
            android:id="@+id/radioBtn13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Botticelli" />
    </RadioGroup>

    <Button
        android:id="@+id/SubmBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="323dp"
        android:onClick="clicker"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup3" />
</androidx.constraintlayout.widget.ConstraintLayout>